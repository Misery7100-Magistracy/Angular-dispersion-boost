#!/bin/bash

while [[ $# -gt 0 ]]; do
  case $1 in
    -i|--input)
      INPUT="$2"
      shift # past argument
      shift # past value
      ;;
    *)
      POSITIONAL_ARGS+=("$1") # save positional arg
      shift # past argument
      ;;
  esac
done

#rm -rf ./output
mkdir -p ./output
cd ./output && !(.gitkeep) && cd ..
#touch ./output/.gitkeep
lpic ${INPUT}
bash lpic.post
